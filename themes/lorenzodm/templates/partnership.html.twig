{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="page-header">
    <div class="container">
        <h1 class="page-title">{{ page.title }}</h1>
        {% if page.header.subtitle %}
            <p class="page-subtitle">{{ page.header.subtitle }}</p>
        {% endif %}
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12">
            {% if page.content %}
                <div class="page-content mb-5">
                    {{ page.content|raw }}
                </div>
            {% endif %}
        </div>
    </div>
    
    {% if page.header.partnerships %}
        <div class="partnership-section">
            <div class="row">
                {% for partnership in page.header.partnerships %}
                    <div class="col-md-4 mb-4">
                        <a href="{{ partnership.url }}" class="feature-card-link" target="_blank" rel="noopener">
                            <div class="feature-card partnership-card">
                                <div class="feature-card-content">
                                    {% if partnership.image %}
                                        <img src="{{ url('theme://images/' ~ partnership.image) }}" 
                                             alt="{{ partnership.title }} - {{ partnership.description|default('') }}" 
                                             class="feature-logo"
                                             loading="lazy">
                                    {% endif %}
                                    <h3>{{ partnership.title }}</h3>
                                    {% if partnership.description %}
                                        <p class="partnership-description">{{ partnership.description }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    
    {% if page.header.collaborations %}
        <div class="collaborations-section mt-5">
            <h2 class="section-title mb-4">{{ page.header.collaborations_title|default('Collaborazioni') }}</h2>
            <div class="row">
                {% for collaboration in page.header.collaborations %}
                    <div class="col-md-6 mb-4">
                        <div class="card collaboration-card">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    {% if collaboration.image %}
                                        <img src="{{ url('theme://images/' ~ collaboration.image) }}" 
                                             class="collaboration-img" 
                                             alt="{{ collaboration.title }}"
                                             loading="lazy">
                                    {% endif %}
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h3 class="card-title">{{ collaboration.title }}</h3>
                                        {% if collaboration.description %}
                                            <p class="card-text">{{ collaboration.description }}</p>
                                        {% endif %}
                                        {% if collaboration.url %}
                                            <a href="{{ collaboration.url }}" class="btn btn-primary" target="_blank" rel="noopener">Visita</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

