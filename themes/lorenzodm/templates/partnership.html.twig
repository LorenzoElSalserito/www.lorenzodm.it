{# Schema.org markup per SEO #}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "{{ page.title }}",
    "description": "{{ page.header.description|default(site.metadata.description) }}",
    "url": "{{ page.url(true, true) }}",
    "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
            {% for partnership in page.header.partnerships %}
            {
                "@type": "ListItem",
                "position": {{ loop.index }},
                "item": {
                    "@type": "Organization",
                    "name": "{{ partnership.title }}",
                    "description": "{{ partnership.description|default('') }}",
                    "url": "{{ partnership.url }}"
                }
            }{% if not loop.last or page.header.collaborations %},{% endif %}
            {% endfor %}
            {% for collaboration in page.header.collaborations %}
            {
                "@type": "ListItem",
                "position": {{ (page.header.partnerships|length) + loop.index }},
                "item": {
                    "@type": "Organization",
                    "name": "{{ collaboration.title }}",
                    "description": "{{ collaboration.description|default('') }}",
                    "url": "{{ collaboration.url }}"
                }
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }
}
</script>
