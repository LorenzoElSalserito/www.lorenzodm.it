{# File: user/themes/lorenzodm/templates/partials/footer.html.twig #}
<footer class="footer">
    <div class="container">
        <div class="row">
            {# Colonna informazioni sito #}
            <div class="col-md-4">
                <h5>lorenzodm.it</h5>
                <p>Un sito web realizzato con tecnologia Open Source e Software Libero - HandMade by Lorenzo DM © {{ "now"|date("Y") }}</p>
                <p class="mt-3">Divulgazione su libertà digitale, software libero e tecnologia open source.</p>
            </div>
            
            {# Colonna menu #}
            <div class="col-md-4">
                <h5>Collegamenti utili</h5>
                <ul class="list-unstyled">
                    {% for p in pages.children.visible %}
                        <li class="mb-2">
                            <a href="{{ p.url }}" class="text-white d-inline-block">
                                <i class="fas fa-chevron-right me-1 small"></i> {{ p.menu|default(p.title) }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            
            {# Colonna social #}
            <div class="col-md-4">
                <h5>Seguimi</h5>
                <div class="social-icons d-flex flex-wrap gap-3 fs-4 mb-3">
                    <a href="{{ theme_config.social_media.telegram_shopping|default('https://t.me/FeelShopping') }}" class="text-white" title="Feel Shopping" target="_blank" rel="noopener">
                        <i class="fab fa-telegram" aria-hidden="true"></i>
                        <span class="visually-hidden">Telegram Feel Shopping</span>
                    </a>
                    <a href="{{ theme_config.social_media.telegram_personal|default('https://t.me/Lorenzo_DM') }}" class="text-white" title="Feel News" target="_blank" rel="noopener">
                        <i class="fab fa-telegram" aria-hidden="true"></i>
                        <span class="visually-hidden">Telegram Feel News</span>
                    </a>
                    <a href="{{ theme_config.social_media.mastodon|default('https://mastodon.uno/@lorenzodm') }}" class="text-white" title="Mastodon" target="_blank" rel="noopener">
                        <i class="fab fa-mastodon" aria-hidden="true"></i>
                        <span class="visually-hidden">Mastodon</span>
                    </a>
                    <a href="{{ theme_config.social_media.youtube|default('https://www.youtube.com/@LorenzoDM?sub_confirmation=1') }}" class="text-white" title="Canale YouTube" target="_blank" rel="noopener">
                        <i class="fab fa-youtube" aria-hidden="true"></i>
                        <span class="visually-hidden">Canale YouTube</span>
                    </a>
                </div>
                <p class="mb-2">Iscriviti al canale YouTube per non perdere i nuovi video sulla libertà digitale!</p>
                <a href="https://www.youtube.com/@LorenzoDM/videos?sub_confirmation=1" class="btn btn-sm btn-accent" target="_blank" rel="noopener">
                    <i class="fab fa-youtube me-1"></i> Iscriviti
                </a>
            </div>
        </div>
        
        {# Copyright #}
        <hr class="my-4" style="background-color: white;">
        <div class="row">
            <div class="col-md-6 text-center text-md-start">
                <p>&copy; {{ "now"|date("Y") }} lorenzodm.it. Tutti i diritti riservati.</p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <p>
                    <a href="#top" class="text-white back-to-top">
                        <i class="fas fa-chevron-up me-1"></i> Torna su
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>

{# Microdata schema.org per il footer #}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "WPFooter",
    "copyrightYear": "{{ "now"|date("Y") }}",
    "copyrightHolder": {
        "@type": "Organization",
        "name": "lorenzodm.it",
        "url": "{{ base_url_absolute }}"
    }
}
</script>