            cssLink.onload = function() { console.log('‚úÖ CSS caricato manualmente'); };
            cssLink.onerror = function() { console.log('‚ùå Errore caricamento CSS'); };
            document.head.appendChild(cssLink);
            
            // JS manuale
            var jsScript = document.createElement('script');
            jsScript.src = '/user/themes/lorenzodm/js/cookie-popup.js';
            jsScript.onload = function() {
                console.log('‚úÖ JS caricato manualmente');
                setTimeout(function() {
